{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "main.cpp",
                "-o",
                "debug/${workspaceFolderBasename}.exe"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "release-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-Wall",
                "-Wextra",
                "-o",
                "release/${workspaceFolderBasename}.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run-debug",
            "type": "process",
            "command": "debug/${workspaceFolderBasename}.exe",
            "group": "test"
        },
        {
            "label": "run-release",
            "type": "process",
            "command": "release/${workspaceFolderBasename}.exe",
            "group": "test"
        },
        {
            "label": "clean-all",
            "type": "shell",
            "command":[
                "rm -rf debug/*.*",
                "rm -rf release/*.*"
            ],
            "group": "build"
        }
    ]
}